@page "{handler?}"
@model ScreeningsModel
@{
    ViewData["Title"] = Title.Screenings;
    int index = 2;
    //ProgectFilm.Film film = new(); 
}

<form method="post">
    <div class="container mt-3">
        <div class="row">
            <select class="form-select form-select-lg w-25 col-5" aria-label="" name="chapter">
                <option value="1">Название фильма</option>
                <option value="2">Режисер</option>
                <option value="3">Стиль</option>
                <option value="4">Краткое описание</option>
                <option value="5">Список сеансов</option>
            </select>
            <input class="form-control col" id="formFileLg" type="search" name="query"/>
            <button type="submit" asp-page="SearchFilms" class="btn btn-info w-auto fw-bold text-center text-light">Поиск</button>
        </div>
    </div>
</form>


<h1 class="fw-bold text-center m-5">@ViewData["Title"]</h1>

<form method="get" asp-page="/Form" asp-page-handler="NewFilm">
    <button type="submit" class="btn btn-primary btn-lg mb-3" >Добавить новый фильм</button>
</form>

<div class="container">
    @foreach (var item in Model.films!)
    {
        <div class="card mt-4 mb-4">
            <a class="card-header nav-link fs-1 fw-bold" asp-area="" asp-page="/FilmInfo" asp-route-id=@item.id>@item.movieTitle</a>
            <div class="card-body">
                <h4 class="card-title mb-4">Расписание показов</h4>

                @foreach (var date in item.listOfScreenings!.date!)
                {
                    <h5 class="card-title mt-4 mb-4">@date</h5>
                    @foreach (var time in item.listOfScreenings!.time!)
                    {
                        <span class="badge bg-secondary fs-6">@time</span>
                    }
                }

            </div>
            <div class="d-grid gap-2 m-2 d-md-flex justify-content-md-end">
                <form method="get" asp-page-handler="Edit">
                    <button type="submit" class="btn btn-outline-success" name="id" value=@item.id>Изменить</button>
                </form>
                <button onclick="clickHandler(this);"  id="deleteButton"  data-id="@item.id" data-title="@item.movieTitle" type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Удалить</button>
            </div>
        </div>
    }
</div>

<!-- Модальное окно -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-danger" id="staticBackdropLabel">Удаление фильма!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body">
                <h2 class="modal-title fs-5">Вы действительно хотите удалить фильм </h2>
                <h1 id="title" class="modal-title fs-5"></h1>
            </div>
            <div class="modal-footer">
                <form method="get" asp-page-handler="Delete">
                    <button type="submit" class="btn btn-danger" name="id" value="">Удалить</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
            </div>
        </div>
    </div>
</div>
